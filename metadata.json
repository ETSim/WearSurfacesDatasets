    "mapTypes": {
        "ao": {
            "name": "Ambient Occlusion Map",
            "description": "Represents how exposed each surface point is to ambient lighting",
            "dataFormat": "8-bit grayscale",
            "interpretation": "Black (0) = fully occluded, White (255) = fully exposed",
            "derivation": "Calculated from multi-angle photometric capture",
            "renderingUsage": "Modulates ambient lighting contribution"
        },
        "bump": {
            "name": "Bump Map",
            "description": "Simple grayscale height displacement",
            "dataFormat": "8-bit grayscale",
            "interpretation": "Black (0) = lowest point, White (255) = highest point",
            "derivation": "Simplified height information",
            "renderingUsage": "Basic surface perturbation for lower-end renderers"
        },
        "displacement": {
            "name": "Displacement Map",
            "description": "Precise height displacement for geometry modification",
            "dataFormat": "16-bit grayscale (stored as PNG)",
            "interpretation": "Black (0) = lowest point, White (65535) = highest point",
            "derivation": "Direct measurement from photometric capture",
            "renderingUsage": "Actual geometric displacement in renderers with tessellation"
        },
        "height": {
            "name": "Height Map",
            "description": "High-precision surface elevation data",
            "dataFormat": "16-bit grayscale (stored as PNG)",
            "interpretation": "Black (0) = lowest point, White (65535) = highest point",
            "derivation": "Direct measurement from photometric capture",
            "renderingUsage": "Source data for other map generation, precise elevation data"
        },
        "hillshade": {
            "name": "Hill Shade Map",
            "description": "Simulated illumination for surface visualization",
            "dataFormat": "8-bit grayscale",
            "interpretation": "Brightness represents illumination from fixed light source",
            "derivation": "Calculated from height map using simulated directional light",
            "renderingUsage": "Visualization only, not typically used in rendering"
        },
        "metallic": {
            "name": "Metallic Map",
            "description": "Defines metalness of the surface for PBR workflows",
            "dataFormat": "8-bit grayscale",
            "interpretation": "Black (0) = dielectric/non-metal, White (255) = metallic",
            "derivation": "Derived from reflectance measurements",
            "renderingUsage": "Controls Fresnel response in PBR rendering"
        },
        "normal": {
            "name": "Normal Map",
            "description": "Surface normal vectors encoded as RGB",
            "dataFormat": "24-bit RGB",
            "interpretation": "R = X axis (±1.0), G = Y axis (±1.0), B = Z axis (always positive)",
            "encoding": "DirectX tangent space encoding",
            "derivation": "Calculated from height map or directly from photometric capture",
            "renderingUsage": "High-detail surface lighting without geometry changes"
        },
        "roughness": {
            "name": "Roughness Map",
            "description": "Surface micro-roughness for PBR rendering",
            "dataFormat": "8-bit grayscale",
            "interpretation": "Black (0) = smooth, White (255) = rough",
            "derivation": "Calculated from micro-surface variance in height map",
            "renderingUsage": "Controls specular highlight shape and micro-surface scattering"
        }
    },
